# PostgreSQL Configuration (for Docker Compose)
POSTGRES_USER=your_db_user
POSTGRES_PASSWORD=your_secure_password
POSTGRES_DB=hris_db
POSTGRES_PORT=5432

# Database Configuration
DATABASE_URL=postgresql://your_db_user:your_secure_password@localhost:5432/hris_db

# Session Secret (generate random string in production)
# You can generate one using: openssl rand -base64 32
SESSION_SECRET=your_session_secret_key_here

# Company GPS Settings
OFFICE_LATITUDE=-6.200000
OFFICE_LONGITUDE=106.816666
OFFICE_RADIUS=100

# Application Settings
NODE_ENV=development
NEXT_PUBLIC_APP_URL=http://localhost:3000
